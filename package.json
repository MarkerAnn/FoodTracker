{
  "name": "foodtracker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/app.js",
    "test": "vitest",
    "test:coverage:clean": "rm -rf coverage",
    "test:coverage": "npm run test:coverage:clean && c8 vitest run",
    "test:coverage:report": "nyc report --reporter=html --reporter=text",
    "build": "tsc",
    "lint": "eslint 'src**/*.ts'",
    "lint:fix": "eslint 'src**/*.ts' --fix",
    "format": "prettier --write 'src**/*.ts'"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "tests/**/*.ts",
      "dist/**"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "report-dir": "./coverage",
    "require": [
      "ts-node/register"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@istanbuljs/esm-loader-hook": "^0.2.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "c8": "^10.1.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.5"
  }
}

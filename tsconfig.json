{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
